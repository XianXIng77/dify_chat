<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.dify_chat_api.mapper.UserMapper">
    
    <!-- 自定义查询：根据用户名查询用户 -->
    <select id="selectByUsername" resultType="org.example.dify_chat_api.entity.User">
        SELECT
            id,
            username,
            password,
            nickname,
            create_time AS createTime,
            update_time AS updateTime,
            deleted
        FROM
            user
        WHERE
            username = #{username}
            AND deleted = 0
    </select>
</mapper>